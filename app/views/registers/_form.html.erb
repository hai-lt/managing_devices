<%= form_for(@register_device, url: registers_path) do |f| %>
  <div class="row">
    <div class="col col-sm-12">
      <%= f.text_area :reason, placeholder: 'Reason', class: 'first_input form-control', style: 'width: 100%; height: 200px' %>
    </div>
  </div>
  <div class="row" style="margin-top: 10px">
    <div class="col col-sm-6">
      <div class='margin-1' style="float: left">
        <%= f.collection_select :from, @lessons, :code, :code, prompt: "From", class: '' %>
      </div>
      <div class='margin-1' style="float: left">
        <%= f.collection_select :to, @lessons, :code, :code, prompt: "To" %>
      </div>
    </div>
    <div class="col col-sm-6">
      <div style="float: right">
        <%= button_to 'Commit', registers_path, method: :post, params: { id: @device.id }, class: 'btn btn-warning' %>
      </div>
    </div>
  </div>
<% end %>
