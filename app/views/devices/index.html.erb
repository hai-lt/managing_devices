<div class="row col-sm-10 col-sm-offset-1">
  <h1>Danh sách các thiết bị:</h1>
</div>
<div class="row col-sm-10 col-sm-offset-1">
  <% if @current_user.admin? %>
  <div class="" style="margin: 10px">
    <%= button_to new_device_path, remote: true, method: :get, class: 'btn btn-xs btn-warning' do %>
    <b>Add</b> | <span class="glyphicon glyphicon-plus"></span>
    <% end %>
  </div>
  <% end %>
  <%= 'Hiện chưa có thiết bị nào được hiện thị' if @devices.blank? %>
  <%= render @devices if @devices.present? %>
  <%= render 'modals/simple_modal' %>
</div>
