  <div class="col-sm-4 col-lg-3 center" style="height: 250px">
    <div class="col-sm-11 col-sm-offset-1 div-show-action" style="border:dotted 1px orange; border-radius: 5px; height: 90%">
      <div class="row" style="height: 200px">
        <img src="/public/img_default.png" class= 'thumbnail' alt=<%=device.name%>/>
      </div>
      <div class="abs-bottom-left">
        <%= device.name %>
      </div>
      <div class="btn-group show-action" role="group" style="height: 20px">
        <div class="margin-1" style="float: left">
          <%= button_to 'Register', new_register_path, method: :get, params: { id: device.id }, class: 'btn btn-xs btn-success' %>
        </div>
        <div class="margin-1" style="float: left">
          <%= button_to 'Report', new_report_path, method: :get, params: { id: device.id }, class: 'btn btn-xs btn-success'%>
        </div>
      </div>
      <div class="abs-top-right">
        <label for="" class="label label-info"><%= device.status %></label>
      </div>
    </div>
  </div>
