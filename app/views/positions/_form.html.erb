<%= form_for @position, remote: true, html: { class: 'form-inline' } do |f| %>
  <div class="form-group row">
    <%= f.text_field :name, placeholder: 'Name', class: 'form-control' %>
    <%= f.text_area :desc, placeholder: 'Description', class: 'form-control' %>
    <div class="modal-footer">
      <%= f.button :submit, class: 'btn btn-warning' do %>
      <span class="glyphicon glyphicon-send"></span>
      <% end %>
    </div>
  </div>
<% end %>
