<tr id="user_<%= user.id %>">
  <td><%= user.email %></td>
  <td><%= user.name %></td>
  <td><%= user.role %></td>
  <td><%= user.try(:position).try(:name) %></td>
  <td>
    <%= link_to edit_user_path(user), { remote: true, 'data-toggle' => 'modal', 'data-target' => '#simple_modal'} do %>
      <label for="" class="label btn-warning" style="text-decoration: none">
        <span class="glyphicon glyphicon-edit"></span>
      </label>
    <% end %>

    <%= link_to user_path(user), method: :delete, remote: true, data: { confirm: 'Are you sure?' } do %>
      <label for="" class="label btn-warning" style="text-decoration: none">
        <span class="glyphicon glyphicon-remove"></span>
      </label>
    <% end %>
  </td>
</tr>
