<%= form_for @report, as: :report, url: reports_path, method: :post, params: { device_id: @device.id } do |f| %>
  <%= f.hidden_field :device_id, value: @device.id, type: 'hidden' %>
  <div class="row">
    <div class="col col-sm-12">
      <%= f.text_area :desc, placeholder: 'Description', class: 'first_input form-control', style: 'width: 100%; height: 200px' %>
    </div>
  </div>
  <div class="row" style="margin-top: 10px">
    <div class="col col-sm-6" style="float: left">
      <%= f.collection_select :rank_id, @ranks, :level, :level, prompt: 'Choose Rank' %>
    </div>
    <div class="col col-sm-6">
      <div class="" style="float: right">
        <%= button_tag(type: 'submit', class: 'btn btn-warning') do %>
        <span class="glyphicon glyphicon-send"></span>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
