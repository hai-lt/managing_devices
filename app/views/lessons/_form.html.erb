<%= form_for @lesson, remote: true, html: { class: 'form-inline' } do |f| %>
<div class="">
  <div class="row">
    <div class="col col-sm-6">
      <%= f.text_field :code, placeholder: 'Code', class: 'form-control', style: 'width: 90%' %>
    </div>
    <div class="col col-sm-6">
      <%= f.text_field :name, placeholder: 'Name', class: 'form-control', style: 'width: 90%'%>
    </div>
  </div>
  <div class="row" style="margin-top: 15px">
    <div class="col col-sm-6">
      <%= f.text_field :start, placeholder: 'Start(h)', class: 'form-control', style: 'width: 90%' %>
    </div>
    <div class="col col-sm-6">
      <%= f.text_field :finish, placeholder: 'finish(h)', class: 'form-control', style: 'width: 90%' %>
    </div>
  </div>
  <div class="row" style="margin-top: 15px">
    <div class="" style="float: right !important; margin-right: 20px">
      <%= f.button :submit, class: 'btn btn-warning' do %>
      <span class="glyphicon glyphicon-send"></span>
      <% end %>
    </div>
  </div>
</div>
<% end %>
