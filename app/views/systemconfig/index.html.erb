<div class="row">
  <div class="col col-sm-6">
    <h2 class="text-center">Positions</h2>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>
            Name
          </th>
          <th>
            Description
          </th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: 'systemconfig/position', collection: @positions %>
      </tbody>
    </table>
  </div>
  <div class="col col-sm-6">
    <h2 class="text-center">Ranks</h2>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>
            Level
          </th>
          <th>
            Description
          </th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: 'systemconfig/rank', collection: @ranks %>
      </tbody>
    </table>
  </div>
</div>
<div class="row">
  <div class="col col-sm-6">
    <h2 class="text-center">Rooms</h2>
    <%= button_to new_room_path, remote: true, method: :get, class: 'label btn-warning small' do %>
      Add new <span class="glyphicon glyphicon-plus"></span>
    <% end %>
    <table class="table table-striped" id='rooms'>
      <thead>
        <tr>
          <th>
            Name
          </th>
          <th>
            Capacity
          </th>
          <th>
            Description
          </th>
        </tr>
      </thead>
      <tbody>
        <%= render @rooms, as: :room %>
      </tbody>
    </table>
  </div>
  <div class="col col-sm-6">
    <h2 class="text-center">Lessons</h2>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>
            Code
          </th>
          <th>
            Start
          </th>
          <th>
            Finish
          </th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: 'systemconfig/lesson', collection: @lessons %>
      </tbody>
    </table>
  </div>
</div>
<%= render 'modals/simple_modal' %>
