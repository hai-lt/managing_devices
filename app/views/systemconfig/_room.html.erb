<tr id="room_<%= room.id %>">
  <td><%= "#{ room.block }.#{ room.no }" %></td>
  <td><%= room.capacity %></td>
  <td><%= room.desc %></td>
  <td>
    <%= link_to edit_room_path(room), { remote: true, 'data-toggle' => 'modal', 'data-target' => '#room_modal'} do %>
      <label for="" class="label btn-warning" style="text-decoration: none">
        <span class="glyphicon glyphicon-edit"></span>
      </label>
    <% end %>

    <%= link_to room_path(room), method: :delete, remote: true, data: { confirm: 'Are you sure?' } do %>
      <label for="" class="label btn-warning" style="text-decoration: none">
        <span class="glyphicon glyphicon-remove"></span>
      </label>
    <% end %>
  </td>
</tr>
